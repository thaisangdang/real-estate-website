@model RealEstates.Areas.Admin.Models.PhanCongDuAnViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    #menuQuanLyPhanCongDuAn {
        color: white;
        background-color: dodgerblue;
    }
</style>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary d-inline-block">Danh sách dự án trong hệ thống</h6>
    </div>
    <div class="card-body">

        @using (Html.BeginForm("Search", "QuanLyPhanCongDuAn", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-horizontal">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.TinhThanhPhoId, new { @class = "control-label col-md-6" })
                    @Html.DropDownListFor(m => m.TinhThanhPhoId, new SelectList(Model.TinhThanhPhos, "Id", "Ten", Model.TinhThanhPhoId), "", new { @class = "form-control col-md-6 select2" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.LoaiDuAnId, new { @class = "control-label col-md-6" })
                    @Html.DropDownListFor(m => m.LoaiDuAnId, new SelectList(Model.LoaiDuAns, "Id", "TenLoai", Model.LoaiDuAnId), "", new { @class = "form-control col-md-6 select2" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-6">
                    <button type="submit" class="btn btn-secondary"><span class="text-black-50"><i class="fas fa-search fa-fw"></i></span> Tìm kiếm</button>
                </div>
            </div>
        </div>
        }

        <div class="table-responsive">
            <table id="dataTable" class="table table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Tên dự án</th>
                        <th>Loại dự án</th>
                        <th>Tỉnh thành phố</th>
                        <th>Địa chỉ</th>
                        <th>Ngày đăng</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.DuAns)
                    {
                        <tr>
                            <td>
                                <a href="@Url.Action("Details","QuanLyDuAn", new { id = item.Id})" title="Chi tiết">
                                    @Html.DisplayFor(modelItem => item.TenDuAn)
                                </a>
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.LoaiDuAn.TenLoai)</td>
                            <td>@Html.DisplayFor(modelItem => item.TinhThanhPho.Ten)</td>
                            <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                            <td>@Html.DisplayFor(modelItem => item.NgayDang)</td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = item.Id})" class="btn btn-primary" title="Phân công">
                                    <span class="text-white"><i class="fas fa-edit fa-fw"></i></span>
                                </a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $('#dataTable').DataTable({
                "columns": [
                    null,
                    null,
                    null,
                    null,
                    null,
                    { "width": "5%" },
                ]
            });
        });

        $(document).ready(function () {$(".select2").select2(); });
    </script>
}
