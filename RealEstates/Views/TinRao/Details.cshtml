@model RealEstates.ViewModels.TinRaoViewModel
@using RealEstates.Helper

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a href="@Url.Action("Index")" class="btn btn-secondary" title="Trở về danh sách">
        <span><i class="fas fa-arrow-circle-left fa-fw"></i></span>
        Trở về danh sách
    </a>
</p>

<div>
    <h4>Chi tiết tin rao</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.LoaiTinRao);</dt>
        <dd>@Model.LoaiTinRaoBDS.Single(x => x.Id == Model.LoaiTinRao).Text</dd>

        <dt>@Html.DisplayNameFor(model => model.LoaiNhaDat)</dt>
        <dd>@Html.DisplayFor(model => model.LoaiNhaDat.TenLoai)</dd>

        <dt>@Html.DisplayNameFor(model => model.GiaTien)</dt>
        <dd>@string.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:c}", Model.GiaTien)</dd>

        <dt>@Html.DisplayNameFor(model => model.TinhThanhPho.Ten)</dt>
        <dd>@Html.DisplayFor(model => model.TinhThanhPho.Ten)</dd>

        <dt>@Html.DisplayNameFor(model => model.QuanHuyen.Ten)</dt>
        <dd>@Html.DisplayFor(model => model.QuanHuyen.Ten)</dd>

        <dt>@Html.DisplayNameFor(model => model.DiaChi)</dt>
        <dd>@Html.DisplayFor(model => model.DiaChi)</dd>

        <dt>@Html.DisplayNameFor(model => model.DienTich)</dt>
        <dd>@Html.DisplayFor(model => model.DienTich)</dd>

        <dt>@Html.DisplayNameFor(model => model.ThongTinMoTa)</dt>
        <dd>@Html.Raw(Model.ThongTinMoTa)</dd>

        <dt>@Html.DisplayNameFor(model => model.Media)</dt>
        <dd>@Html.Raw(Model.Media)</dd>

        <dt>@Html.DisplayNameFor(model => model.TuKhoa)</dt>
        <dd>@Html.DisplayFor(model => model.TuKhoa)</dd>

        <dt>@Html.DisplayNameFor(model => model.TieuDe)</dt>
        <dd>@Html.DisplayFor(model => model.TieuDe)</dd>

        <dt>
            @Html.DisplayNameFor(model => model.AnhDaiDien)
        </dt>
        <dd>
            @if (!string.IsNullOrEmpty(Model.AnhDaiDien))
            {
                <img src="@Html.DisplayFor(model => model.AnhDaiDien)" alt="@Html.DisplayFor(model => model.AnhDaiDien)" class="img-thumbnail image-detail">
            }
            else
            {
                <img src="~/Content/Images/AnhDaiDienDuAn/notfound.jpg" alt="" class="img-thumbnail image-detail">
            }
        </dd>

        <dt>@Html.DisplayNameFor(model => model.NgayTao)</dt>
        <dd>@Html.DisplayFor(model => model.NgayTao)</dd>

        <dt>@Html.DisplayNameFor(model => model.HoTen)</dt>
        <dd>@Html.DisplayFor(model => model.HoTen)</dd>

        <dt>@Html.DisplayNameFor(model => model.SoDienThoai)</dt>
        <dd>@Html.DisplayFor(model => model.SoDienThoai)</dd>

        <dt>@Html.DisplayNameFor(model => model.Email)</dt>
        <dd>@Html.DisplayFor(model => model.Email)</dd>

        <dt>@Html.DisplayNameFor(model => model.ThoiHanDangTin)</dt>
        <dd>
            @SelectOptions.getThoiHanDangTin.SingleOrDefault(x => x.Id == Model.ThoiHanDangTin).Text
        </dd>

        <dt>@Html.DisplayNameFor(model => model.TrangThai)</dt>
        <dd>
            @SelectOptions.getTrangThaiTinRao.SingleOrDefault(x => x.Id == Model.TrangThai).Text
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Trở về danh sách", "Index")
</p>