@model RealEstates.Models.NhaDat

@{
    ViewBag.Title = "Thông tin nhà đất";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Thông tin Nhà đất</h3>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-4 text-center">
                        @{
                            Html.RenderPartial("~/Views/Shared/_NhaDatAvatar.cshtml", Model);
                        }
                        <dl>
                            <dt>@Html.DisplayNameFor(model => model.DuAn.TenDuAn)</dt>
                            <dd>@Html.DisplayFor(model => model.DuAn.TenDuAn)</dd>

                            <dt>@Html.DisplayNameFor(model => model.LoaiNhaDat.TenLoai)</dt>
                            <dd>@Html.DisplayFor(model => model.LoaiNhaDat.TenLoai)</dd>

                            <dt>@Html.DisplayNameFor(model => model.DuAn.QuanHuyen.Ten)</dt>
                            <dd>@Html.DisplayFor(model => model.DuAn.QuanHuyen.Ten)</dd>

                            <dt>@Html.DisplayNameFor(model => model.DuAn.TinhThanhPho.Ten)</dt>
                            <dd>@Html.DisplayFor(model => model.DuAn.TinhThanhPho.Ten)</dd>

                            <dt>@Html.DisplayNameFor(model => model.Ten)</dt>
                            <dd>@Html.DisplayFor(model => model.Ten)</dd>

                            @if (Model.IsRent)
                            {
                                <dd>Nhà đất cho thuê</dd>
                                <dt>@Html.DisplayNameFor(model => model.GiaThue)</dt>
                                <dd>@string.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:c}", Model.GiaThue)</dd>
                            }
                            else
                            {
                                <dd>Nhà đất bán</dd>
                                <dt>@Html.DisplayNameFor(model => model.GiaBan)</dt>
                                <dd>@string.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:c}", Model.GiaBan)</dd>
                            }

                            <dt>@Html.DisplayNameFor(model => model.DienTich) m2</dt>
                            <dd>@Html.DisplayFor(model => model.DienTich)</dd>

                            <dt>@Html.DisplayNameFor(model => model.HuongNha)</dt>
                            <dd>@Html.DisplayFor(model => model.HuongNha)</dd>

                            <dt>@Html.DisplayNameFor(model => model.SoPhong)</dt>
                            <dd>@Html.DisplayFor(model => model.SoPhong)</dd>

                            <dt>@Html.DisplayNameFor(model => model.NgayTao)</dt>
                            <dd>@Html.DisplayFor(model => model.NgayTao)</dd>
                        </dl>
                    </div>
                    <div class="col-md-8">
                        <h3>@Model.Ten</h3>
                        <dl class="dl-horizontal">
                            <dt>@Html.DisplayNameFor(model => model.ThongTinMoTa)</dt>
                            <dd>@Html.Raw(Model.ThongTinMoTa)</dd>

                            <dt>@Html.DisplayNameFor(model => model.Media)</dt>
                            <dd>@Html.Raw(Model.Media)</dd>

                            <dt>@Html.DisplayNameFor(model => model.TuKhoa)</dt>
                            <dd>@Html.DisplayFor(model => model.TuKhoa)</dd>

                            <dt>@Html.DisplayNameFor(model => model.BanDo)</dt>
                            <dd>@Html.Raw(Model.BanDo)</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>