@{
    ViewBag.Title = "Register";
    Layout = "~/Areas/Admin/Views/Shared/_LoginLayout.cshtml";
}
@using RealEstates.Areas.Admin.Models
@model RegisterViewModel


<!-- Outer Row -->
<div class="row justify-content-center">

    <div class="col-xl-5 col-lg-5 col-md-7">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <p>Real Estate</p>
                                <h1 class="text-gray-900 mb-4">Đăng ký</h1>
                            </div>
                            @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal user", role = "form" }))
                            {
                                @Html.AntiForgeryToken()

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group col-md-12">
                                    @Html.LabelFor(m => m.Email, new { @class = "col-md-6 control-label" })
                                    <div class="col-md-12">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-user" })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group col-md-12">
                                    @Html.LabelFor(m => m.Password, new { @class = "col-md-6 control-label" })
                                    <div class="col-md-12">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-user" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group col-md-12">
                                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-6 control-label" })
                                    <div class="col-md-12">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-user" })
                                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group col-md-12" style="display:none">
                                    @Html.LabelFor(m => m.Role, new { @class = "col-md-6 control-label" })
                                    <div class="col-md-12">
                                        @Html.TextBoxFor(m => m.Role, new { @class = "form-control form-control-user", @Value = "123" })
                                        @Html.ValidationMessageFor(m => m.Role, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group col-md-12">
                                    <div class="col-md-12">
                                        <input class="btn btn-primary btn-user btn-block" type="submit" value="Register" />
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}